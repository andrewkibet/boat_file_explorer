<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundApp"
    android:orientation="vertical"
    android:paddingTop="24dp">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/frag_favs_title"
        android:textAlignment="center"
        android:textColor="@color/colorBottonMenuItens"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/frag_favs_images"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="0"
            app:cardBackgroundColor="@color/colorCardsBackground"
            app:cardCornerRadius="8dp">

            <ImageView
                android:id="@+id/imdedeagdddeView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_fav_images" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/frag_favs_sounds"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="0"
            app:cardBackgroundColor="@color/colorCardsBackground"
            app:cardCornerRadius="8dp">

            <ImageView
                android:id="@+id/imagdddeView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_fav_musics" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/frag_favs_videos"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="0"
            app:cardBackgroundColor="@color/colorCardsBackground"
            app:cardCornerRadius="8dp">

            <ImageView
                android:id="@+id/imageVaaaiew4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_fav_videos" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>


</LinearLayout>