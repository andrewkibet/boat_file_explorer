<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cel_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_row"
    android:orientation="horizontal"
    android:padding="15dp">

    <ImageView
        android:id="@+id/cel_item_icon"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_weight="0"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ic_file_folder" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:orientation="vertical"
        android:paddingStart="10dp">

        <TextView
            android:id="@+id/cel_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="Folder01"
            android:textColor="@color/colorBottonMenuItens" />

        <TextView
            android:id="@+id/cel_item_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12 Itens"
            android:textColor="@color/colorBottonMenuItens"
            android:textSize="10sp" />
    </LinearLayout>

</LinearLayout>